<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/imvLeft"
        android:contentDescription="@null"
        android:src="@drawable/ic_left"
        android:padding="@dimen/dimens_10dp"
        />
    <ImageView
        android:layout_height="@dimen/dimens_70dp"
        android:layout_width="@dimen/dimens_70dp"
        android:id="@+id/imvLogoLeft"
        android:layout_toEndOf="@+id/imvLeft"
        android:layout_toRightOf="@+id/imvLeft"
        android:contentDescription="@null"
        android:src="@drawable/ic_logo"
        android:padding="@dimen/dimens_5dp"
        android:layout_marginLeft="@dimen/dimens_10dp"
        android:layout_marginStart="@dimen/dimens_10dp"
        />
    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="@dimen/dimens_70dp"
            android:src="@drawable/ic_logo"
            android:layout_height="@dimen/dimens_70dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimens_35sp"
            android:text="@string/textview_splash_HEA"
            android:padding="@dimen/dimens_5dp"
            android:layout_marginTop="@dimen/dimens_3dp"
            android:textColor="@android:color/white"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimens_35sp"
            android:text="@string/textview_splash_THY"
            android:padding="@dimen/dimens_5dp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dimens_3dp"
            android:textColor="@android:color/white"
            />
    </LinearLayout>
</merge>