<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="@dimen/dimens_10dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_feedback2" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimens_5dp"
        android:layout_toEndOf="@+id/imgIcon"
        android:layout_toRightOf="@+id/imgIcon"
        android:padding="@dimen/dimens_5dp"
        android:text="@string/textview_text_feed_back"
        android:textColor="@color/black"
        android:textSize="@dimen/dimens_20sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_1dp"
        android:layout_marginBottom="@dimen/dimens_1dp"
        android:layout_marginTop="@dimen/dimens_1dp"
        android:layout_below="@+id/tvTitle"
        android:layout_marginLeft="@dimen/dimens_10dp"
        android:layout_marginRight="@dimen/dimens_10dp"
        android:background="@color/gray"/>

</RelativeLayout>