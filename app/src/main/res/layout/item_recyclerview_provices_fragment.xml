<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimens_5dp"
    android:background="@drawable/border_item_recyclerview_hospital_fragment"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgIcon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="@dimen/dimens_10dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_hospital" />

    <TextView
        android:gravity="center"
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimens_5dp"
        android:layout_toEndOf="@+id/imgIcon"
        android:layout_toRightOf="@+id/imgIcon"
        android:padding="@dimen/dimens_5dp"
        android:text="@string/textview_text_hospital"
        android:textColor="@color/black"
        android:textSize="@dimen/dimens_25sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imgIcon"
        android:drawablePadding="@dimen/dimens_5dp"
        android:id="@+id/tvForward"
        android:drawableRight="@drawable/ic_forward"
        android:padding="@dimen/dimens_5dp"
        android:text="@string/textview_text_see_all_hospital_in_here"
        android:textSize="@dimen/dimens_18sp" />
</RelativeLayout>