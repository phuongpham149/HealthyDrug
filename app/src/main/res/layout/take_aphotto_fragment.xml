<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgBg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/dimens_5dp"
        android:scaleType="fitXY"
        android:src="@drawable/medician_bg" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgBg"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/dimens_15dp">

        <ImageView
            android:id="@+id/imgCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/dimens_50dp"
            android:padding="@dimen/dimens_5dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_camera" />

        <ImageView
            android:id="@+id/imgFolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimens_25dp"
            android:layout_toEndOf="@+id/imgCamera"
            android:layout_toRightOf="@+id/imgCamera"
            android:padding="@dimen/dimens_5dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_folder" />

        <ImageView
            android:id="@+id/imgMove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:padding="@dimen/dimens_5dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_forwardd" />
    </RelativeLayout>

</RelativeLayout>